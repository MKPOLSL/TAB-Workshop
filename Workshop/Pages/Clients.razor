@page "/clients"
@inject IClientService clientService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
@attribute [AuthorizeRoles(Role.Manager)]

<h1>Klienci</h1>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Numer telefonu</th>
            <th>Akcje</th>
            <th>
                <button type="button" class="btn btn-primary" @onclick="() => AddNewClient()">Dodaj nowego klienta</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (clients == null)
        {
            <p><em>Ładuję...</em></p>
        }
        else
        {
            @foreach (var client in clients)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.PhoneNumber</td>
                    <td>
                        <button type="button" class="btn btn-warning" @onclick="() => EditClient()">Edytuj</button>
                        <button type="button" class="btn btn-danger" @onclick="() => DeleteClient(client)">Usuń</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" @onclick="() => AddCar()">Przypisz samochód</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    private IEnumerable<Client> clients;

    protected override async Task OnInitializedAsync()
    {
        clients = await clientService.GetClients();
    }

    void AddNewClient() => navigationManager.NavigateTo("/addClient");

    void EditClient()
    {

    }

    public async Task DeleteClient(Client client)
    {
        await clientService.DeleteClient(client);
        navigationManager.NavigateTo("/clients", forceLoad: true);
    }

    void AddCar()
    {
        navigationManager.NavigateTo("/cars");
    }
}