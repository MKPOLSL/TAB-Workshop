@page "/login"
@layout LoginLayout

@using Workshop.Entities
@using Workshop.Services
@using System.Security.Claims
@using Microsoft.Extensions.Logging
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<Login> Logger

<center>
    <div class="col-8 card">
        <div class="col-12 row">
            <p>&nbsp;</p>
        </div>
        <div class="col-12 row">
            <div class="col-6" style="border-right:groove">
                <img src="/images/logo.png" width="100%" height="90%" alt="LOGO" />
            </div>
            <div class="col-6" style="border-left:thick">
                <EditForm Model="@employee" OnValidSubmit="@SignIn">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div>
                        <br /><br /><br />
                    </div>
                    <div>
                        <h3 style="font-weight:bold; color:grey">Warsztat - System Obsługi Napraw</h3>
                    </div>
                    <div>
                        <br />
                    </div>
                    <div class="col-12 row login-input">
                        <input type="text" class="form-control col-12" @bind="employee.Username" placeholder="Username" />
                    </div>
                    <br />
                    <div class="col-12 row login-input">
                        <input type="password" class="form-control col-12" @bind="employee.Password" placeholder="Password" />
                    </div>
                    <br />
                    <div class="col-12 row login-input">
                        <span class="col-12"></span>
                        <input type="submit" class="form-control col-6 btn btn-primary" value="SIGN IN" />
                    </div>
                    <br />
                    <div class="col-12 row" style="text-align:left; font-weight:bold">
                        <span class="col-12">@LoginMessage</span>
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="col-12 row">
            <p>&nbsp;</p>
        </div>
    </div>
</center>


@code {
    private Employee employee;
    public string LoginMessage { get; set; }
    public string ErrorMessage { get; set; }
    ClaimsPrincipal claimsPrincipal;

    protected override void OnInitialized()
    {
        employee = new Employee();
    }

    private void SignIn()
    {
        Logger.LogInformation("SIGN IN called");

        LoginMessage = "Ooo mamy cynk, że kliknąłeś w SIGN IN" + "\n Username: " + employee.Username + "\n Password: " + employee.Password;

        employee.Password = "";
    }

}

