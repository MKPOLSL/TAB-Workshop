<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Warsztat</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView Roles="@($"{Role.Administrator}, {Role.Manager}, {Role.Worker}")">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Strona Główna
                    </NavLink>
                </li>
            </Authorized>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="oi oi-plus" aria-hidden="true"></span> Login
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
        <AuthorizeView Roles="@($"{Role.Manager}")">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="articlelist">
                    <span class="oi oi-plus" aria-hidden="true"></span> Baza
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="clients">
                    <span class="oi oi-plus" aria-hidden="true"></span> Klienci
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="cars">
                    <span class="oi oi-plus" aria-hidden="true"></span> Samochody
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="addClient">
                    <span class="oi oi-plus" aria-hidden="true"></span> Dodaj Klienta
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="@($"{Role.Administrator}")">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="addEmployee" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Dodaj pracownika
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="requestList" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Realizuj czynność
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
